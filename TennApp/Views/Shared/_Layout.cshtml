<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/Sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Chart JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js" integrity="sha256-CfcERD4Ov4+lKbWbYqXD6aFM9M51gN4GUEtDhkWABMo=" crossorigin="anonymous"></script>

    <title>TennApp | @ViewData["Title"]</title>

    <style>
        .jumbotron{
            margin-bottom:0 !important;
        }
    </style>
</head>
<body>
    <div id="wrapper" class="toggled">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li>
                    ​<div><img src="~/images/logo_TENNAPP_main_white.png" class="img-fluid" alt="TENNAPP" style="width:80px;height:auto;text-align:center;"></div>
                </li>
                <li class="sidebar-brand">
                    <a asp-controller="Admin" asp-action="Dashboard">
                        TENNAPP
                    </a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Search">Búsquedas</a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Reports">Reportes</a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Bills">Facturas</a>
                </li>
                <li>
                    ----------
                </li>
                <li>
                    <a asp-controller="Tourneys" asp-action="Index">Torneos</a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="Payment">Añadir pago</a>
                </li>
                <li>
                    ----------
                </li>
                <li>
                    <a asp-controller="People" asp-action="Index">Personas</a>
                </li>
                <li>
                    <a asp-controller="Categories" asp-action="Index">Categorías</a>
                </li>
                <li>
                    <a asp-controller="TShirts" asp-action="Index">T-shirts</a>
                </li>
                <li>
                    <a asp-controller="PaymentMethods" asp-action="Index">Métodos de pago</a>
                </li>
                <li>
                    <a asp-controller="CategoryTypes" asp-action="Index">Tipos de categoría</a>
                </li>
                <li>
                    <a asp-controller="ReportTypes" asp-action="Index">Tipos de reporte</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div class="top-line"></div>
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <a href="#menu-toggle" class="btn btn-sm btn-secondary" id="menu-toggle">Show/hide menu</a>
                @RenderBody()
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>