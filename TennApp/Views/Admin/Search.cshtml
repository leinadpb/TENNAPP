@{
    ViewData["Title"] = "Búsqueda";
}
<div align="center" class="section-title"><h2>Búsqueda avanzada</h2></div>
<br />
<div>
    <form>
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-2">
                <select class="form-control form-control-sm">
                    <option>Por usuario</option>
                    <option>Por categoría</option>
                </select>
            </div>
            <div class="col-sm-5"></div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="staticSearch" value="" style="width:100%;">
            </div>
            <div class="col-sm-3"></div>
        </div>
        <br />
        <!-- Filtros -->
        <div class="row">
            <div class="col-sm-2" align="right"><b>Filtros</b></div>
            <div class="col-sm-8" style="text-align:center;">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                    <label class="form-check-label" for="inlineCheckbox1">Pagado</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                    <label class="form-check-label" for="inlineCheckbox2">Confirmado</label>
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label" for="inlineComboBox3">Camiseta </label>
                    <select class="form-control form-control-sm" id="inlineComboBox3">
                        <option>Small</option>
                        <option>Medium</option>
                        <option>Large</option>
                        <option>XL</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <button class="btn btn-success btn-block">Consultar</button>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </form>
    <br /><br />
    <!-- Resultados -->
    <div>
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Teléfono
                </th>
                <th>
                    Email
                </th>
                <th>
                    Edad
                </th>
                <th>
                    Camiseta
                </th>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </table>
    </div>
</div>
