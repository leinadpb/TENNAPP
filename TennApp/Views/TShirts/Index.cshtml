@model IEnumerable<TennApp.Models.TShirt>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>T-Shirts</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TShirtID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TShirtID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TShirtID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
